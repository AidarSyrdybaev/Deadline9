@model Deadline9.Models.LectureEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lecture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                @Html.DropDownListFor(model => model.LessionId, ViewBag.Lessions as SelectList);
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.TeacherId, ViewBag.Teachers as SelectList);
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.GroupId, ViewBag.Groups as SelectList);
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
